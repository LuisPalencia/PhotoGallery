<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutNoPermissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.NoPermissionsFragment"
        >

    <ImageView
        android:id="@+id/imgNoPermissions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_perm_media"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textViewNoPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/no_permissions_error"
        app:layout_constraintTop_toBottomOf="@id/imgNoPermissions"
        />

    <Button
        android:id="@+id/btnCheckStoragePermissions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/check_permissions"
        app:layout_constraintTop_toBottomOf="@id/textViewNoPermissions"
        />


</androidx.constraintlayout.widget.ConstraintLayout>